<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kdh.mapper.GametalkMapper">


	<select id="selectMemberInfoYn" parameterType="map" resultType="int">
		<![CDATA[ 
			SELECT 
				COUNT(*) AS cnt
			FROM
				user_list
			WHERE
				user_id = #{userId}
			AND
				user_pw = #{userPw}
		]]>
	</select > 
	<select id="loadUsers" parameterType="String" resultType="com.bitc.kdh.dto.GametalkUserDto">
	<![CDATA[ 
	SELECT
		*
	FROM
		user_list
	WHERE
		user_id = #{userId}
	AND
		deleted_yn = 'N'
	]]>
	</select>
</mapper>