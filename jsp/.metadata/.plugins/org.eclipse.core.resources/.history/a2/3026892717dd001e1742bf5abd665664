	<script>
		//submit 버튼을 클릭하면 -> submit 이벤트가 발생하면
		//아이디와 암호가 없으면 loginProcess.jsp로 값을 넘기지 않는다.
		const formEl = document.querySelector('form');
		formEl.onsubmit = function () {
			const useridEl = document.querySelector('[name=userid]');
			const userpwEl = document.querySelector('[name=passwd]');
			if (useridEl.value == '' ||  ) {
				alert('아이디가 없습니다');
				useridEl.focus();
				return false;
			}else {
				if (userpwEl.value == '') {
					
				}
				
				
			return true;				
			}
		}
	</script>
